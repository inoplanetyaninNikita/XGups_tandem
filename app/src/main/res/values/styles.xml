<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!--  BottomSheetStyles -->
    <style name="BottomSheetDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/bottom_dialog_slide_up</item>
        <item name="android:windowExitAnimation">@anim/bottom_dialog_slide_down</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bgr_bottom_sheet</item>
    </style>
    <!--  /BottomSheetStyles -->

    <style name="BottomNavigationViewStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/white</item> <!-- Фоновый цвет -->
        <item name="itemIconTint">@color/xgpurple</item> <!-- Цвет неактивных иконок -->
        <item name="itemTextColor">@color/xgpurple</item> <!-- Цвет неактивных текстов -->
    </style>
</resources>